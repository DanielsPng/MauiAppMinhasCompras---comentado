<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.NovoProduto"
             Title="Novo Produto">  <!-- Define o título da página como "Novo Produto" -->

    <ContentPage.ToolbarItems>
        <!-- Adiciona um item de toolbar chamado "Salvar" que chama o evento "ToolbarItem_Clicked" ao ser clicado -->
        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked" />
    </ContentPage.ToolbarItems>
    
    <VerticalStackLayout Spacing="10" Padding="10">  <!-- Define um layout empilhado verticalmente com espaçamento e padding -->
        <!-- Rótulo para o campo de descrição do produto -->
        <Label Text="Descrição do Produto:" />
        <!-- Campo de entrada de texto para a descrição do produto -->
        <Entry x:Name="txt_descricao" />

        <!-- Rótulo para o campo de quantidade do produto -->
        <Label Text="Quantidade:" />
        <!-- Campo de entrada de texto para a quantidade do produto com teclado numérico -->
        <Entry x:Name="txt_quantidade" Keyboard="Numeric" />

        <!-- Rótulo para o campo de preço unitário do produto -->
        <Label Text="Preço Unitário:" />
        <!-- Campo de entrada de texto para o preço unitário do produto com teclado numérico -->
        <Entry x:Name="txt_preco" Keyboard="Numeric" />
    </VerticalStackLayout>
</ContentPage>
